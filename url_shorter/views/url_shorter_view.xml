<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="url_shorter_tree" model="ir.ui.view">
        <field name="name">url.short.tree</field>
        <field name="model">url.shorter</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="short_url" />
                <field name="expiration_date" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <record id="url_shorter_form" model="ir.ui.view">
        <field name="name">url.short.form</field>
        <field name="model">url.shorter</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_new_token" type="object" string="Generate new token" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}" />
                        </button>
                    </div>
                    <h1>
                        <field name="name" class="oe_inline" />
                    </h1>
                    <group>
                        <field name="short_url" />
                    </group>
                    <group>
                        <group>
                            <field name="token" />
                            <field name="redirect_number" />
                        </group>
                        <group>
                            <field name="expiration_date" />
                        </group>
                    </group>
                    <group>
                        <field name="long_url" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="url_shorter_action" model="ir.actions.act_window">
        <field name="name">URL Shorter</field>
        <field name="res_model">url.shorter</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('create_uid', '=', uid)]</field>
    </record>

    <menuitem name="URL Shorter" id="menu_url_shorter" action="url_shorter_action" />
</odoo>
